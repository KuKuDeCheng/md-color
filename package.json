{
  "name": "md-color",
  "displayName": "md-color",
  "description": "使用MarkDown写作时，可以使用`<font color=red>内容</font>`给文本添加颜色。md-color就是针对此操作的偷懒工具",
  "publisher":"PandaCheng",
  "repository": "https://github.com/KuKuDeCheng/md-color",
  "icon": "img/logo.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.randomColor",
    "onLanguage:markdown"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.randomColor",
        "title": "md-color: randomColor"
      },
      {
        "command": "extension.md-color-red",
        "title": "md-color: red"
      },
      {
        "command": "extension.md-color-green",
        "title": "md-color: green"
      },
      {
        "command": "extension.md-color-orange",
        "title": "md-color: orange"
      }
    ],
    "keybindings": [
      {
          "key": "ctrl+1",
          "command": "extension.randomColor",
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown"
      },
      {
        "key": "cmd+1",
        "command": "extension.randomColor",
        "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown"
      }
    ],
    "menus": {
        "editor/context": [
          {
            "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
            "command": "extension.md-color-red",
            "group": "navigation"
          },
          {
            "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
            "command": "extension.md-color-green",
            "group": "navigation"
          },
          {
            "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
            "command": "extension.md-color-orange",
            "group": "navigation"
          }
        ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
